    <script>
        // 贷款计算器应用程序
        const LoanCalculator = {
            // 初始化应用程序
            init: function() {
                this.setupTabNavigation();
                this.setupEqualPaymentCalculator();
                this.setupInterestFirstCalculator();
            },
            
            // 设置标签页导航
            setupTabNavigation: function() {
                const tabs = document.querySelectorAll('.tab');
                
                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        // 移除所有标签的活动状态
                        tabs.forEach(t => t.classList.remove('active'));
                        
                        // 隐藏所有计算器
                        document.querySelectorAll('.calculator-container').forEach(calc => {
                            calc.classList.remove('active');
                        });
                        
                        // 设置当前标签为活动状态
                        tab.classList.add('active');
                        
                        // 显示对应的计算器
                        const tabId = tab.getAttribute('data-tab');
                        document.getElementById(`${tabId}-calculator`).classList.add('active');
                    });
                });
            },
            
            // 设置等额本息计算器
            setupEqualPaymentCalculator: function() {
                const calculateBtn = document.getElementById('calculateBtn');
                
                calculateBtn.addEventListener('click', () => {
                    // 获取输入值
                    const loanAmountInWan = parseFloat(document.getElementById('loanAmount').value);
                    const annualRate = parseFloat(document.getElementById('annualRate').value);
                    const loanTerm = parseInt(document.getElementById('loanTerm').value);
                    
                    // 验证输入
                    if (!this.validateInputs(loanAmountInWan, annualRate, loanTerm)) {
                        alert('请输入有效的数值！');
                        return;
                    }
                    
                    // 计算等额本息贷款
                    const result = this.calculateEqualPaymentLoan(loanAmountInWan, annualRate, loanTerm);
                    
                    // 显示结果
                    this.displayEqualPaymentResult(result, loanTerm);
                    
                    // 显示结果容器
                    document.getElementById('loanResultContainer').style.display = 'block';
                });
            },
            
            // 设置先息后本计算器
            setupInterestFirstCalculator: function() {
                // 计算按钮事件
                const calculateBtn = document.getElementById('calculateInterestFirstBtn');
                
                calculateBtn.addEventListener('click', () => {
                    // 获取输入值
                    const loanAmountInWan = parseFloat(document.getElementById('interestFirstAmount').value);
                    const annualRate = parseFloat(document.getElementById('interestFirstRate').value);
                    const loanTerm = parseInt(document.getElementById('interestFirstTerm').value);
                    
                    // 验证输入
                    if (!this.validateInputs(loanAmountInWan, annualRate, loanTerm)) {
                        alert('请输入有效的数值！');
                        return;
                    }
                    
                    // 计算先息后本贷款
                    const result = this.calculateInterestFirstLoan(loanAmountInWan, annualRate, loanTerm);
                    
                    // 显示结果
                    this.displayInterestFirstResult(result, loanTerm);
                    
                    // 显示结果容器
                    document.getElementById('interestFirstResultContainer').style.display = 'block';
                });
            },
            
            // 验证输入值
            validateInputs: function(amount, rate, term) {
                return !isNaN(amount) && !isNaN(rate) && !isNaN(term) && 
                       amount > 0 && rate > 0 && term > 0;
            },
            
            // 计算等额本息贷款
            calculateEqualPaymentLoan: function(loanAmountInWan, annualRate, loanTerm) {
                const loanAmount = loanAmountInWan * 10000; // 转换为元
                const monthlyRate = annualRate / 100 / 12;
                
                // 计算每月还款额
                const monthlyPayment = loanAmount * monthlyRate * Math.pow(1 + monthlyRate, loanTerm) / 
                                      (Math.pow(1 + monthlyRate, loanTerm) - 1);
                
                // 计算总还款金额
                const totalPayment = monthlyPayment * loanTerm;
                
                // 计算总支付利息
                const totalInterest = totalPayment - loanAmount;
                
                // 计算月还利息（平均）
                const monthlyInterest = totalInterest / loanTerm;
                
                // 计算月利率（厘）
                const monthlyRateLi = (monthlyInterest / loanAmount) * 1000;
                
                return {
                    monthlyPayment,
                    totalPayment,
                    totalInterest,
                    monthlyInterest,
                    monthlyRateLi
                };
            },
            
            // 计算先息后本贷款
            calculateInterestFirstLoan: function(loanAmountInWan, annualRate, loanTerm) {
                const loanAmount = loanAmountInWan * 10000; // 转换为元
                const monthlyRate = annualRate / 100 / 12;
                
                // 计算每月还款利息
                const monthlyInterestPayment = loanAmount * monthlyRate;
                
                // 计算总支付利息
                const totalInterestPayment = monthlyInterestPayment * loanTerm;
                
                // 计算总还款金额
                const totalPayment = loanAmount + totalInterestPayment;
                
                return {
                    monthlyInterestPayment,
                    totalInterestPayment,
                    totalPayment,
                    loanAmount
                };
            },
            
            // 显示等额本息计算结果
            displayEqualPaymentResult: function(result, loanTerm) {
                document.getElementById('monthlyPayment').textContent = result.monthlyPayment.toFixed(2) + ' 元';
                document.getElementById('totalPayment').textContent = result.totalPayment.toFixed(2) + ' 元';
                document.getElementById('totalInterest').textContent = result.totalInterest.toFixed(2) + ' 元';
                document.getElementById('monthlyInterest').textContent = result.monthlyInterest.toFixed(2) + ' 元';
                document.getElementById('monthlyRateLi').textContent = result.monthlyRateLi.toFixed(3) + ' 厘';
                document.getElementById('loanTermResult').textContent = loanTerm + '个月';
            },
            
            // 显示先息后本计算结果
            displayInterestFirstResult: function(result, loanTerm) {
                document.getElementById('monthlyInterestPayment').textContent = result.monthlyInterestPayment.toFixed(2) + ' 元';
                document.getElementById('totalInterestPayment').textContent = result.totalInterestPayment.toFixed(2) + ' 元';
                document.getElementById('principalPayment').textContent = result.loanAmount.toFixed(2) + ' 元';
                document.getElementById('interestFirstTotalPayment').textContent = result.totalPayment.toFixed(2) + ' 元';
                document.getElementById('interestFirstTermResult').textContent = loanTerm + '个月';
            }
        };
        
        // 初始化应用程序
        document.addEventListener('DOMContentLoaded', function() {
            LoanCalculator.init();
        });
    </script>
</body>
</html>
